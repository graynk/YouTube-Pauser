{
	"manifest_version": 2,
	"name": "YouTube Pauser",
	"version": "0.2.2",
	"description": "Single click the icon to play/pause all of the YouTube tabs",
	"author": "graynk",

	"permissions": [
		"tabs"
	],
	"content_scripts": [
		{
			"matches": [
				"*://www.youtube.com/*"
			],
			"js": ["content.js"]
		}
	],
	"options_ui": {
		"page": "settings.html",
		"open_in_tab": true
	},
	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "icon.png"
	}
}
